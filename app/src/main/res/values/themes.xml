<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NightingaleWeather" parent="Theme.MaterialComponents.DayNight.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/Theme.ActionBar.Style</item>
        <item name="actionBarStyle">@style/Theme.ActionBar.Style</item>
    </style>

    <style name="Theme.ActionBar.Style" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/teal_700</item>
        <item name="background">@color/teal_700</item>
    </style>

    <style name="Theme.NightingaleWeather.ActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/Theme.ActionBar.Style</item>
        <item name="actionBarStyle">@style/Theme.ActionBar.Style</item>
    </style>

    <style name="Theme.NightingaleWeather.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NightingaleWeather.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>